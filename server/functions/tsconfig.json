{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ]
}
